extends ../overview

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
            tr
              th 电影分类
              th 导演
              th 国家
              th 上映年份
              th 访问量
              th 查看
              th 更新
              th 删除
         tbody
            each item in categories
              tr(class="item-id-#{item._id}")
                  td #{item.name}
                  td #{item.doctor}
                  td #{item.country}
                  td #{item.year}
                  td #{item.pv}
                  td: a(target="_blank", href="../movie/#{item._id}") 查看
                  td: a(href="../admin/update/#{item._id}") 修改
                  td: button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
    .row(style="margin-bottom:100px;")
      a.btn.btn-primary(href="../category/new") 添加新分类
    script(src="/js/category.js")