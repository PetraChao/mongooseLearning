extends ../overview

block content
    .container
        .row
          .col-md-5.col-md-offset-4
                form(method="POST", action="/user/signin")
                    .form-group
                      label(for="signinName") 用户名
                      input#signinName.form-control(name="user[name]", type="text", required="required")
                    .form-group
                      label(for="signinPassword") 密码
                      input#signinPassword.form-control(name="user[password]", type="password", required="required")
                  .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 提交
        p(style="margin-bottom:100px;")