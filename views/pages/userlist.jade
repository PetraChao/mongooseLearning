extends ../overview

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
            tr
              th 名字
              th 查看
              th 更新
              th 删除
         tbody
            each item in users
              tr(class="item-id-#{item._id}")
                  td #{item.name}
                  td: a(target="_blank", href="../users/#{item._id}") 查看
                  td: a(href="../users/update/#{item._id}") 修改
                  td: button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
